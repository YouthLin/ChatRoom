<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.youthlin.chatroom.server.control.ServerController">
    <MenuBar>
        <Menu text="文件"/>
    </MenuBar>

    <BorderPane>
        <top>
            <HBox spacing="10" alignment="BASELINE_CENTER">
                <padding>
                    <Insets left="10" top="10" right="10" bottom="10"/>
                </padding>
                <Text text="监听端口"/>
                <TextField fx:id="serverPort" text="5678"/>
                <Button fx:id="startButton" onAction="#onClickStartButton"
                        text="开启服务器">
                </Button>
                <Button fx:id="clearButton" onAction="#onClickClearButton" text="清空消息列表"/>
            </HBox>
        </top>
        <center>
            <VBox spacing="10">
                <padding>
                    <Insets left="10" top="10" right="10" bottom="10"/>
                </padding>
                <Text text="消息列表"/>
                <ListView fx:id="msgListView"/>
            </VBox>
        </center>
        <right>
            <VBox spacing="10">
                <padding>
                    <Insets left="10" top="10" right="10" bottom="10"/>
                </padding>
                <Text text="在线用户"/>
                <ListView fx:id="onlineUserList"/>
            </VBox>
        </right>
        <bottom>
            <HBox spacing="10" alignment="BASELINE_CENTER">
                <padding>
                    <Insets left="10" top="10" right="10" bottom="10"/>
                </padding>
                <TextArea fx:id="broadcastTextArea" prefRowCount="2"/>
                <Button fx:id="sendButton" onAction="#onClickSendButton"
                        text="发送广播" maxHeight="Infinity"/>
            </HBox>
        </bottom>
    </BorderPane>
</VBox>